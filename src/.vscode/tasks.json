{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build log - windows - cl.exe",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"*.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		},
		{
            "type": "cppbuild",
            "label": "build log - linux - g++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "msg_queue/msg_queue.cpp",
				"*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-l",
                "pthread"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
	]
}